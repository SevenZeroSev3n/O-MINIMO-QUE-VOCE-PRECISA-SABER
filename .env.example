#       - CRM via API (HubSpot, Pipedrive)

# ============================================================================
# RATE LIMITING
# ============================================================================

# Login: máximo de tentativas por janela de tempo
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15

# Leads: máximo de submissões por janela de tempo
RATE_LIMIT_LEADS_MAX=3
RATE_LIMIT_LEADS_WINDOW_MINUTES=60

